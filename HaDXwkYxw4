cat > "$INFO_FILE" <<EOF
Marzban v0.8.4 (Cloudflare/Ð´Ð¾Ð¼ÐµÐ½Ð½Ð°Ñ ÑƒÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐ°)
=============================================
Ð”Ð°Ñ‚Ð°: $(date)
ÐŸÐ°Ð½ÐµÐ»ÑŒ: https://$DOMAIN/dashboard

Ð›Ð¾Ð³Ð¸Ð½: $ADMIN_USER
ÐŸÐ°Ñ€Ð¾Ð»ÑŒ: $ADMIN_PASS

Ð•ÑÐ»Ð¸ Ð¿Ð¾Ñ‚ÐµÑ€ÑÐµÑ‚Ðµ Ñ„Ð°Ð¹Ð» â€” ÑÐ±Ñ€Ð¾ÑÐ¸Ñ‚ÑŒ Ð¿Ð°Ñ€Ð¾Ð»ÑŒ Ð¼Ð¾Ð¶Ð½Ð¾ Ñ‡ÐµÑ€ÐµÐ· marzban-cli Ð²Ð½ÑƒÑ‚Ñ€Ð¸ ÐºÐ¾Ð½Ñ‚ÐµÐ¹Ð½ÐµÑ€Ð°.
EOF

chmod 600 "$INFO_FILE"

echo -e "${GREEN}ðŸŽ‰ Marzban ÑƒÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½ Ð¸ Ð³Ð¾Ñ‚Ð¾Ð² Ðº Ñ€Ð°Ð±Ð¾Ñ‚Ðµ!${NC}\n"
echo -e "ðŸŒ ${CYAN}ÐŸÐ°Ð½ÐµÐ»ÑŒ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ:${NC} http://$IP:8000/dashboard"
echo -e "ðŸ‘¤ ${CYAN}Ð›Ð¾Ð³Ð¸Ð½ Ð°Ð´Ð¼Ð¸Ð½Ð¸ÑÑ‚Ñ€Ð°Ñ‚Ð¾Ñ€Ð°:${NC} $ADMIN_USER"
echo -e "ðŸ”‘ ${CYAN}ÐŸÐ°Ñ€Ð¾Ð»ÑŒ Ð°Ð´Ð¼Ð¸Ð½Ð¸ÑÑ‚Ñ€Ð°Ñ‚Ð¾Ñ€Ð°:${NC} $ADMIN_PASS\n"
echo -e "ðŸ“„ ${YELLOW}Ð’ÑÑ Ð¸Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ Ð¾Ð± ÑƒÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐµ ÑÐ¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð° Ð²: ${CYAN}$INFO_FILE${NC}"
echo -e "${GREEN}Ð­Ñ‚Ð¾Ñ‚ Ñ„Ð°Ð¹Ð» Ð·Ð°Ñ‰Ð¸Ñ‰ÐµÐ½ Ð¸ Ð¼Ð¾Ð¶ÐµÑ‚ Ð±Ñ‹Ñ‚ÑŒ Ð¿Ñ€Ð¾Ñ‡Ð¸Ñ‚Ð°Ð½ Ñ‚Ð¾Ð»ÑŒÐºÐ¾ ÑÑƒÐ¿ÐµÑ€Ð¿Ð¾Ð»ÑŒÐ·Ð¾Ð²Ð°Ñ‚ÐµÐ»ÐµÐ¼ (root).${NC}\n"
echo -e "${BLUE}Ð¡ÐºÑ€Ð¸Ð¿Ñ‚ Ñ€Ð°Ð·Ñ€Ð°Ð±Ð¾Ñ‚Ð°Ð½ alexcoder Ð´Ð»Ñ skladchik.org${NC}"
echo -e "${CYAN}Ð’Ð°Ñˆ ÑÐµÑ€Ð²ÐµÑ€ Ð³Ð¾Ñ‚Ð¾Ð² Ðº Ñ€Ð°Ð±Ð¾Ñ‚Ðµ ðŸš€ !${NC}\n"
echo -e "${GREEN}ðŸ‘‡Ð¢ÐµÐ¿ÐµÑ€ÑŒ Ð·Ð°Ð¿ÑƒÑÑ‚Ð¸Ñ‚Ðµ ÐºÐ¾Ð¼Ð°Ð½Ð´Ñƒ Ð´Ð»Ñ Ð³ÐµÐ½ÐµÑ€Ð°Ñ†Ð¸Ð¸ xray ÐºÐ¾Ð½Ñ„Ð¸Ð³Ð°:ðŸ‘‡${NC}\n"
